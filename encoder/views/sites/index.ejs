<!doctype html>
<html>
  <head>
    <title>Encoder | Caloocan 2025 Elections Quick Tracking System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="stylesheets/encoder.css" />
    <link rel="stylesheet" href="stylesheets/login.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('../partials/header'); %>
    <div class="encoderBody">
      <div class="tallies">
        <div class="btn-group">
          <button
            class="btn btn-secondary btn-lg tallyHeader dropdown-toggle"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            Precinct 0005A, District 1
          </button>
          <ul class="precinctsList dropdown-menu">
            <% precincts.forEach(function(precinct) { %>
            <li>
              <button class="clusteredPrecinct dropdown-item btn-lg">
                <%= precinct %>
              </button>
            </li>

            <% }) %>
          </ul>
        </div>

        <div class="container-fluid">
          <div class="row">
            <div class="col">
              <%- include('../partials/tally-card', { header: 'Mayor',
              candidates: mayors }) %>
            </div>
            <div class="col">
              <%- include('../partials/tally-card', { header: 'Vice-Mayor',
              candidates: viceMayors }) %>
            </div>
            <div class="col">
              <%- include('../partials/tally-card', { header: 'Congressman',
              candidates: congressmen }) %>
            </div>
            <div class="col">
              <%- include('../partials/tally-card', { header: 'Councilors',
              candidates: councilors }) %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('../partials/footer'); %>
  </body>
</html>
