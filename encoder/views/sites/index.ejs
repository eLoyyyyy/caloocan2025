<!doctype html>
<html>
  <head>
    <title>Encoder | Caloocan 2025 Elections Quick Tracking System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/stylesheets/encoder.css" />
    <link rel="stylesheet" href="/stylesheets/login.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('../partials/header'); %>
    <div class="encoderBody">
      <% if (clusters.length <= 0) { %>
        <%- include('../partials/no-precinct'); %>
      <% } else { %>
        <div class="tallies">
          <div class="btn-group">
            <button
              class="btn btn-secondary btn-lg tallyHeader dropdown-toggle"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Please select cluster
            </button>
            <ul class="precinctsList dropdown-menu">
              <% clusters.forEach(function(cluster) { %>
              <li>
                <a
                  href="/cluster/<%= cluster %>"
                  class="clusteredPrecinct dropdown-item btn-lg btn btn-info"
                  role="button"
                >
                  <%= cluster %>
                </a>
              </li>
  
              <% }) %>
            </ul>
          </div>
        </div>
      <% } %>
    </div>
    <p class="comelecDeclaration">Problem with the tallies? Call hotline: <a href="tel:+639397832574">+639397832574</a> & <a href="tel:+639065742092">+639065742092</a></p>
    <%- include('../partials/footer'); %>
  </body>
</html>
